template(name="Register")
	.register
		form(name="application")
			section
				.max-width-700.content-wide
					h1 Mis eesmärki soovid koolitusel osaledes täita?
					textarea(rows="10" name="idea")
			section
				.max-width-700.content-wide
					h1 Mis päevadel sobib sulle koolitusel osaleda?
					.calendar
						div(data-month="november")
							h2.heading November
							each novemberDays
								if zero
									div.cal-cell(data-day="{{this}}" style="opacity:0")
										label
											input.hour(type="checkbox")
											span {{this}}
								else
									div.cal-cell(data-day="{{this}}" class="{{this}}")
										label
											input.hour(type="checkbox")
											span {{this}}
						div(data-month="december")
							h2.heading Detsember
							each decemberDays
								if zero
									div.cal-cell(data-day="{{this}}" style="opacity:0")
										label
											input.hour(type="checkbox")
											span {{this}}
								else
									div.cal-cell(data-day="{{this}}" class="{{this}}")
										label
											input.hour(type="checkbox")
											span {{this}}
						div(data-month="january")
							h2.heading Jaanuar
							each januaryDays
								if zero
									div.cal-cell(data-day="{{this}}" style="opacity:0")
										label
											input.hour(type="checkbox")
											span {{this}}
								else
									div.cal-cell(data-day="{{this}}" class="{{this}}")
										label
											input.hour(type="checkbox")
											span {{this}}
			section
				.max-width-700.content-wide
					h1 Vali omale sobiv pakett
					+Hinnad
			section
				.max-width-700.content-wide
					h1 Isiklik info
					table.medium-text
						tr
							td Nimi
							input(type="text" name="name")
						tr
							td Email
							input(type="text" name="email")
						tr
							td Telefon
							input(type="text" name="telephone")
			section
				.max-width-700.content-wide.align-center
					input.btn(type="submit" value="Saada")
